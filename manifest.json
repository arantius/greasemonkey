{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "4.3",
  "description": "__MSG_extDesc__",
  "homepage_url": "https://www.greasespot.net/",
  "icons": {
    "48": "skin/icon.svg",
    "96": "skin/icon.svg",
    "512": "skin/icon.svg"
  },
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "{e4a8a97b-f2ed-450b-b12d-ee082ba24781}",
      "strict_min_version": "57.0"
    }
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": "skin/icon.svg",
    "default_popup": "src/browser/monkey-menu.html",
    "default_title": "__MSG_extName__"
  },

  "background": {
    "page": "/bg/bg.html"
  },

  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "cookies",
    "downloads",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
